# ====================
# Database
# ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app

# ====================
# Backend
# ====================
DATABASE_URL=postgresql://postgres:postgres@db:5432/app
SECRET_KEY=dev-secret-key-change-in-production

# Authentication Provider: mock{%- if _enable_aws_auth %} | cognito{%- endif %}

AUTH_PROVIDER=mock
{%- if _enable_aws_storage %}

# Storage Provider: local | s3
STORAGE_PROVIDER=local
{%- endif %}

# Logging Handler: console | cloudwatch | datadog
LOG_HANDLER=console

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000
{%- if _enable_aws_auth or _enable_aws_storage or _enable_aws_infra %}

# ====================
# AWS (for production)
# ====================
# AWS_REGION={{ aws_region }}
{%- if _enable_aws_auth %}
# AWS_COGNITO_USER_POOL_ID=
# AWS_COGNITO_CLIENT_ID=
{%- endif %}
{%- if _enable_aws_storage %}
# AWS_S3_BUCKET=
{%- endif %}
{%- endif %}

# ====================
# Frontend
# ====================
NEXT_PUBLIC_API_URL=http://localhost:8000
