# ====================
# Database
# ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app

# ====================
# Backend
# ====================
DATABASE_URL=postgresql://postgres:postgres@db:5432/app
SECRET_KEY=dev-secret-key-change-in-production

# Authentication Provider: mock{%- if include_advanced_auth %} | cognito{%- endif %}

AUTH_PROVIDER=mock
{%- if include_storage_adapter %}

# Storage Provider: local | s3
STORAGE_PROVIDER=local
{%- endif %}

# Logging Handler: console | cloudwatch | datadog
LOG_HANDLER=console

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000
{%- if include_advanced_auth or include_storage_adapter or include_infrastructure %}

# ====================
# AWS (for production)
# ====================
# AWS_REGION={{ aws_region }}
{%- if include_advanced_auth %}
# AWS_COGNITO_USER_POOL_ID=
# AWS_COGNITO_CLIENT_ID=
{%- endif %}
{%- if include_storage_adapter %}
# AWS_S3_BUCKET=
{%- endif %}
{%- endif %}

# ====================
# Frontend
# ====================
NEXT_PUBLIC_API_URL=http://localhost:8000
